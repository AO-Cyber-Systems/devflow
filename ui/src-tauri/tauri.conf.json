{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DevFlow",
  "version": "0.1.0",
  "identifier": "com.devflow.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DevFlow",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Local development environment manager",
    "longDescription": "DevFlow provides a complete management interface for local development environments, Docker infrastructure, database migrations, secrets management, and deployments."
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0MjA1RTk5MEFFOEJBQUUKUldTdXV1Z0ttVjRnRlBSLzZBczR2dm4xZ2l4bno0UzhhQ2EySGR0aXNQd0xHOW1kcm5pSGRaMUEK",
      "endpoints": [
        "https://github.com/AO-Cyber-Systems/devflow/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
